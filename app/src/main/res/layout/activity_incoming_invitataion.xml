<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_meeting_invitataion"
    tools:context=".Activities.IncomingInvitationActivity">

    <ImageView
        android:id="@+id/imageMeetingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorTextIcons"
        android:layout_marginTop="@dimen/_50ssp"
        android:src="@drawable/ic_video_black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/incomingMeetingInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageMeetingType"
        android:text="Incoming Meeting Invitation"
        android:textColor="@color/colorTextIcons"
        android:textSize="@dimen/_15ssp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:fontFamily="@font/ubuntu_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/textFirstChar"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:background="@drawable/bg_meeting_user_icon"
            android:text="AK"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_30ssp"/>

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:text="Anurag Kashyap"
            android:includeFontPadding="false"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_18ssp"/>

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="anurag@kashyap.com"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_11ssp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageAcceptInvitation"
        android:layout_width="@dimen/_40ssp"
        android:layout_height="@dimen/_40ssp"
        android:layout_marginStart="@dimen/_60ssp"
        android:layout_marginBottom="@dimen/_50ssp"
        android:padding="@dimen/_8sdp"
        app:tint="@color/colorTextIcons"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#34F109"
        android:src="@drawable/ic_accept"
        android:background="@drawable/bg_meeting_user_icon"/>

    <ImageView
        android:id="@+id/imageRejectInvitation"
        android:layout_width="@dimen/_40ssp"
        android:layout_height="@dimen/_40ssp"
        android:layout_marginEnd="@dimen/_60ssp"
        android:layout_marginBottom="@dimen/_50ssp"
        android:padding="@dimen/_8sdp"
        app:tint="@color/colorTextIcons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#E80518"
        android:src="@drawable/ic_reject"
        android:background="@drawable/bg_meeting_user_icon"/>

</RelativeLayout>